/*fun main() {
    fun repeatWord(input: String, n: Int): String {     //repeatWord input을 String 문자열 선언 , n은 int로 선언하고 string출력 
        var answer: String = input                  // 변수 answer String 은 input과 같다. 
        repeat(n - 1) {
            answer += input                    //answer 의 값에 증량이 input과 같다. 
        }
        return answer       //return 을 반환 한다. 
    }

    val result = repeatWord("hi", 2)
    println(result)        // 출력 결과: hihi
} */



